<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.phoenices.chapters"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.phoenices.chapters.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.phoenices.chapters.GameplayActivity"
            android:label="@string/title_activity_gameplay" >
        </activity>
        <activity
            android:name="com.phoenices.chapters.SelectActivity"
            android:label="@string/title_activity_select" >
        </activity>
        <activity
            android:name="com.phoenices.chapters.ResumeActivity"
            android:label="@string/title_activity_continue" >
        </activity>
        <activity
            android:name="com.phoenices.chapters.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.phoenices.chapters.TutorialHelloWorld"
            android:label="@string/title_activity_tutorial_hello_world" >
        </activity>
    </application>

</manifest>
